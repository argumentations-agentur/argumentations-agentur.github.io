<style>
  h1 {
    font-size: 2rem; /* Largest font size for h1 */
    font-weight: bold;
  }
  h2 {
    font-size: 1.5rem; /* Medium font size for h2 */
    font-weight: bold;
  }
  h3 {
    font-size: 1.25rem; /* Smallest font size for h3 */
    font-weight: bold;
  }
</style>
<header>
  {% include "navbar.njk" %}
</header>
<main id="{{ title }}" class="w-full flex flex-col justify-center items-center">
  <div class="self-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0 pt-4">
    <!--h1 class="font-bold uppercase tracking-widest text-gray-800 text-2xl mb-4">{{ title }}</h1-->
    <h1 class="font-bold text-5xl text-center mb-8">{{title}}</h1>

    <div class="font-light text-black text-lg">
      {{ content | safe }}
    </div>
  </div>
</main>
